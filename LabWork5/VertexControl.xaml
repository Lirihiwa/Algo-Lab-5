<UserControl x:Class="LabWork5.VertexControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Ellipse Name="vertexEllipse" Width="50" Height="50" Fill="Blue" Stroke="Black" StrokeThickness="2" Panel.ZIndex="0"/>
        <TextBlock Name="vertexTextBlock" Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1"/>
    </Grid>
</UserControl>